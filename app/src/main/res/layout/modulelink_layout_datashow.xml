            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@color/white" android:paddingLeft="@dimen/dp15" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <ImageView android:layout_width="@dimen/dp18" android:layout_height="@dimen/dp18" android:src="@drawable/mkgl_icon_xiangqing_fj" />
                <TextView android:textSize="@dimen/dp14" android:textColor="@color/c_666666" android:paddingLeft="@dimen/dp5" android:paddingTop="@dimen/dp10" android:paddingBottom="@dimen/dp10" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="附件" />
