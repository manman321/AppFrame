            <LinearLayout android:orientation="vertical" android:id="@id/layout_modulelink_customer_add" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            <include layout="@layout/public_layout_line" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@id/layout_modulelink_contact" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@color/white" android:paddingLeft="@dimen/dp15" android:layout_width="fill_parent" android:layout_height="wrap_content">
